  
<div class="col-md-4">
  <p><h2><%= product.name %></h2></p>
  <p><%= product.description %></p>
  <p><%= product.color %></p>
  <!--<p>$<%= sprintf "%.2f", product.price %></p>-->
  <p><%= image_tag(product.image_url) %></p>
  
  <p><%= link_to 'View', product %></p>
  <% if signed_in? && current_user.admin? %>
  	<p><%= link_to 'Edit', edit_product_path(product) %></p>
  	<p><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></p>
  <% end %>
</div>