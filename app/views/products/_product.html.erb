  
<div class="col-md-4">
  <p><h2><%= product.name %></h2></p>
  <p><%= product.description %></p>
  <p><%= product.color %></p>
  <p id="url"><%= image_tag(product.image_url) %></p>
  
  <p><%= link_to 'Show', product %></p>
  <p><%= link_to 'Edit', edit_product_path(product) %></p>
  <p><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></p>
</div>