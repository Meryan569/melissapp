<p id="notice"><%= notice %></p>
<div class="container">
	<div class="row" id="image">
		<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
			<p><%=image_tag(@product.image_url, class: "img-responsive", data_zoom_image: @product.image_url) %></p>
		</div>
		<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12" id="about">
			<h4><%= @product.name %></h4>
			<p><%= @product.description %></p>
			<p><%= @product.color %></p>
			
			<div class="rated" data-score="<%= @product.average_rating %>"><p>Average Rating:</p></div>
		</div>
	</div>
  
		<div class="add-review">
          <% if user_signed_in? %>
            <%= render 'new_comment' %>
          <% else %>
             <p id="reviewlogin">You must be <%= link_to('logged in', new_user_session_path) %> to leave a review</p>
          <% end %>
      	</div> 
</div><!-- end container-->
	  
<%= render 'new_comment' %>
<%= render 'comments' %>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>

