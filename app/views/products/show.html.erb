<p id="notice"><%= notice %></p>
<div class="container">
	<div class="row" id="image">
		<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
			<p><%=image_tag(@product.image_url, class: "img-responsive", data_zoom_image: @product.image_url) %></p>
		</div>
		<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12" id="about">
			<h4><%= @product.name %></h4>
			<p><%= @product.description %></p>
			<p><%= @product.color %></p>
			
			<p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>
			<%= form_tag "/payments/create" do %>
  			<%= render partial: "shared/stripe_checkout_button" %>
			<% end %>
		</div>
	</div>
  
</div><!-- end container-->
	  
<%= render 'new_comment' %>
<%= render 'comments' %>

<div class="link-back">
	<% if signed_in? && current_user.admin? %>
	<%= link_to 'Edit', edit_product_path(@product) %> |
	<% end %>
	
	<%= link_to 'Back', products_path %>
</div>

