<div class="container">
	<h1>User Information</h1><hr>
	<div class="row">
		<div class="col-md-offset-4 col-md-4">
			<p>
				<strong>First name:</strong>
				<%= @user.first_name %>
			</p><br>

			<p>
				<strong>Last name:</strong>
				<%= @user.last_name %>
			</p><br>

			<p>
				<strong>Email address:</strong>
				<%= @user.email %>
			</p><br>

			<%= link_to 'Edit', edit_user_path(@user) %> |
			<%= link_to 'Back', users_path %>
		</div>
	</div>
</div>